{
  "name": "fp-api",
  "version": "0.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Build,App\" -c \"green.bold,cyan.bold\" \"npm run build:watch\" \"npm run server:watch\"",
    "server": "node -r dotenv/config dist/server.js",
    "server:watch": "nodemon -r dotenv/config dist/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "db:start": "docker-compose up -d",
    "db:shutdown": "docker-compose stop && docker-compose rm -f",
    "test": "jest",
    "test:integration": "jest -c jest.config.integration.js",
    "test:integration:watch": "jest -c jest.config.integration.js --watch --silent=false",
    "test:unit": "jest -c jest.config.unit.js",
    "test:unit:watch": "jest -c jest.config.unit.js --watch --silent=false",
    "prettier": "npx prettier --write \"src/**/*\" \"test/**/*\""
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.7",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.10",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.0",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "merge": "^1.2.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "*.(test|spec).(js|ts)"
    ],
    "delay": 3000
  }
}
